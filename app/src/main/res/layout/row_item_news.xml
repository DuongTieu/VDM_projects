<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_row_ava"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/a" />

        <TextView
            android:id="@+id/tv_item_row_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical|start"
            android:text="duong"
            android:textColor="#303030"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_row_item_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:text="doung" />

    <ImageView
        android:id="@+id/img_item_row_picture"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/tv_row_item_intro"
        android:maxHeight="50dp"
        android:src="@drawable/noimag" />

    <TextView
        android:id="@+id/tv_item_row_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_item_row_picture"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:maxLines="6"
        android:text="sdifjlklsd
        jfskldfjkl sdfjk;kl dzfijlkj zsdfkljklsdzfj" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/layout2"
        android:layout_below="@+id/tv_item_row_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_item_row_like"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/tv_item_row_count_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="100 luot like"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_item_row_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/binhluan" />

            <TextView
                android:id="@+id/tv_item_row_count_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="100 luot like"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_item_row_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/them" />

            <TextView
                android:id="@+id/tv_item_row_more"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="more"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#e0f4f4"/>
</RelativeLayout>