<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_margin="16dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/a"
        android:id="@+id/img_opp_ava" />

    <TextView
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="Duong Tieu 9x"
        android:id="@+id/tv_opp_user_name"
        android:layout_alignTop="@+id/img_opp_ava"
        android:layout_toRightOf="@+id/img_opp_ava"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1 minute ago"
        android:id="@+id/tv_opp_minute"
        android:layout_below="@+id/tv_opp_user_name"
        android:layout_alignLeft="@+id/tv_opp_user_name"
        android:layout_alignStart="@+id/tv_opp_user_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="contents"
        android:id="@+id/tv_opp_content"
        android:layout_alignLeft="@+id/img_opp_ava"
        android:layout_alignStart="@+id/img_opp_ava"
        android:layout_below="@+id/img_opp_ava"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_opp_content"
        android:id="@+id/linearLayout">

         <LinearLayout

             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/btn_opp_care"
             android:orientation="horizontal"
             android:background="#e2f4f4">
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:text="Quan tam"
                 android:textAlignment="center"
                 android:gravity="center"/>
             </LinearLayout>

            <LinearLayout
             android:layout_weight="1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/btn_opp_cancel"
             android:orientation="horizontal"
             android:background="#e2f4f4">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Huy"
                    android:textAlignment="center"
                    android:gravity="center"/>
            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:background="#d9d0d0"
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true" />


</RelativeLayout>