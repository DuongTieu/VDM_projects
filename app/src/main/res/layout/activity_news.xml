<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_activity_new_ava"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_news_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Duong"
                android:textColor="#303030"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_activity_news_minute"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="16 phut truoc" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_activity_news_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly1"
        android:layout_marginBottom="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:maxLines="3"
        android:text="Day la newss" />

    <TextView
        android:id="@+id/tv_activity_news_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_activity_news_intro"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="this is contents" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_news_care"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_activity_news_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d2f3f4"
                android:gravity="center"
                android:text="Thích"
                android:textAllCaps="true"
                android:textColor="#303030" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_news_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/btn_activity_news_unlike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#d2f3f4"
                android:gravity="center"
                android:text="Không thích"
                android:textAllCaps="true"
                android:textColor="#303030" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>